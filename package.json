{
  "name": "jurema",
  "version": "1.0.0",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "export PORT=8080 ENV=PRODUCTON && node dist/main.js",
    "dev": "export PORT=5001 && nodemon --watch \"src/\" --exec \"ts-node src/main\" -e ts",
    "build:watch": "tsc --watch",
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf dist",
    "lint:fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn build && yarn build:clean"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@wildcard-api/server": "^0.5.0",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/helmet": "^0.0.47",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "prettier-tslint": "^0.4.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint:fix"
    ]
  }
}
